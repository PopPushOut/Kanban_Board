@import '_normalize.styl'
@import '_typography.styl'

body
  background offwhite

.grid
  display grid
  grid-template-columns repeat(auto-fill, minmax(400px, 1fr))
  margin 0 auto

.grid-figure
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background offwhite
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.remove
  border none
  position absolute
  top 0
  right 0
  line-height 1
  font-size 30px
  color blue
  &:hover, &:focus
    color red
    outline 0

/*
  Task Related CSS
*/
.single-task
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%

.task-list
  margin 0
  padding 0
  .task
    cursor grab
    border 2px solid lighten(grey, 90%)
    border-radius 3px
    margin 2px 0
    width 100%
    display inline-block
    text-decoration none
    padding 2px
    font-size 12px
    color black
    transition all 0.2s
    &:hover, &:focus
      border-color blue
      outline 0

.selectable
  cursor pointer

.decoration-none
  text-decoration: none;
  &:focus, &:hover, &:visited, &:link, &:active {
    text-decoration: none;
  }

.title
  font-size 1.6rem
  display flex
  justify-content center

.task-info
  padding 1rem
  .editable 
    font-size 1.5rem
    margin 1rem 0
  h2
    padding 1rem
    border-bottom 2px solid blue
  p
    font-size 1rem
    margin 0
  strong
    padding-left 1rem
    color blue
    margin-right 5px
    &::after
      content ':'

/*  
  Comments  
*/
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1

/*  
  Input Form  
*/
.form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
  .error
    border 2px blue solid
    border-radius: 3px;

.textarea-readonly
  background-color inherit
  margin 1rem 0
  min-height 100px

.textarea
  margin 1rem 0
  min-height 100px

/*  
  Buttons  
*/
.control-buttons
  display flex
  justify-content space-evenly
  margin 1rem 0
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 1
  text-decoration none
  padding 3px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0