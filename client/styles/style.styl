@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'

body
  background offwhite

.photo-grid
  //height 100vh;
  display grid
  grid-template-columns repeat(auto-fill, minmax(400px, 1fr))
  margin 0 auto

.grid-figure
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background offwhite
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.task-list
  margin 0
  padding 0
  .task
    cursor grab
    border 2px solid lighten(grey, 90%)
    border-radius 3px
    margin 2px 0
    width 100%
    display inline-block
    text-decoration none
    padding 2px
    font-size 12px
    color black
    transition all 0.2s
    &:hover, &:focus
      border-color blue
      outline 0

.selectable
  cursor pointer

.remove-column
  border none
  position absolute
  top 0
  right 0
  line-height 1
  font-size 30px
  color blue
  &:hover, &:focus
    color red
    outline 0

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
  .error
    border 2px blue solid
    border-radius: 3px;


.grid-photo-wrap
  position relative
  
.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none
  

/*  
  Buttons  
*/

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0

.save-button
    @extend .button
    text-size 10px
    line-height 1
    padding 3px
    margin 2px 0
  .edit-button
    @extend .button
    text-size 10px
    line-height 1
    padding 3px
    margin-left 2px
  
/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0

  
  

